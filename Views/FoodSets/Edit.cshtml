@model HealthAndBeauty.ViewModels.FoodSetViewModel

@{
    ViewData["Title"] = "Edit products";
}
<head>
    <script type="text/javascript" src="~/js/products-scripts/prosucts-scripts.js"></script>
</head>
<body>
    <form method="post"
          asp-controller="FoodSets" asp-action="Edit"
          enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Name"></label>
            <div class="col-sm-6">
                <input id="lat" type="text" class="form-control" asp-for="Name" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Description"></label>
            <div class="col-sm-6">
                <textarea id="lon" class="form-control" asp-for="Description"></textarea>
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label class="col-sm-1 col-form-label" asp-for=Price></label>
            <div class="col-sm-1">
                <input type="text" class="form-control" asp-for="Price" />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>

            <label class="col-sm-1 col-form-label" asp-for=DeliveryTime></label>
            <div class="col-sm-2">
                <input type="text" class="form-control" asp-for="DeliveryTime" />
            </div>
            <span asp-validation-for="DeliveryTime" class="text-danger"></span>


            <label class="col-sm-1 col-form-label" asp-for=Calorific></label>
            <div class="col-sm-2">
                <input type="text" class="form-control" asp-for="Calorific" />
            </div>
            <span asp-validation-for="Calorific" class="text-danger"></span>
     
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for=ImageData></label>
            <div class="col-sm-6">
                <input id="fileInput" type="file" class="form-control" asp-for="ImageData" />
            </div>
            <span asp-validation-for="ImageData" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label class="col-sm-1">Ingredients</label>
            <button type="button" class="col-sm-1 btn btn-success" onclick="addInput()" style="margin: -5px 10px 10px 10px;">Add</button>
        </div>

        <div id="submitButton" class="col-sm-8">
            <div class="form-group row">
                <input type="submit" id="save" value="Save" class="btn btn-primary" style="margin-top:10px; margin:auto" />
            </div>
        </div>
    </form>
</body>