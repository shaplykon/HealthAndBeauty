@model HealthAndBeauty.ViewModels.FoodSetViewModel

@{
    ViewData["Title"] = "Edit products";
}
<head>
    <script type="text/javascript" src="~/js/products-scripts/prosucts-scripts.js"></script>
</head>
<body>
    <form method="post"
          asp-controller="FoodSets" asp-action="Edit"
          enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Name"></label>
            <div class="col-sm-6">
                <input id="lat" type="text" class="form-control" asp-for="Name" />
            </div>
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Description"></label>
            <div class="col-sm-6">
                <input id="lon" type="text" class="form-control" asp-for="Description" />
            </div>
            <span asp-validation-for="Description"></span>
        </div>

        <div class="form-group row">

            <label class="col-sm-1">Ingredients</label>
            <button type="button" class="btn btn-success" onclick="addInput()">Add</button>
        </div>

        <div id="ingredientsBlock">

        </div>

        @{
        <div class="form-group row ingredient-input">

            <input type="hidden" asp-for="Ingredients[0].Id" />
            <label class="col-sm-2 col-form-label"></label>
            <div class="col-sm-6">
                <input id="lon" type="text" class="form-control" asp-for="Ingredients[0].Name" />
            </div>
            <span asp-validation-for="Ingredients[0].Name"></span>
        </div>


        }

        <div id="submitButton" class="col-sm-8">
            <div class="form-group row">
                <input type="submit" id="save" value="Save" class="btn btn-primary" style="margin-top:10px; margin:auto" />
            </div>
        </div>
    </form>
</body>