@model HealthAndBeauty.ViewModels.FoodSetViewModel

@{
    ViewData["Title"] = "Edit products";
}

<body>
    <form method="post"
          asp-controller="FoodSets" asp-action="Edit"
          enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Name"></label>
            <div class="col-sm-6">
                <input id="lat" type="text" class="form-control" asp-for="Name" />
            </div>
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Description"></label>
            <div class="col-sm-6">
                <input id="lon" type="text" class="form-control" asp-for="Description" />
            </div>
            <span asp-validation-for="Description"></span>
        </div>

        <label>Ingredients</label>

        @for (int i = 0; i < ViewBag.FoodSet.Ingredients.Count; i += 1)
        {
            <div class="form-group row">

                <input type="hidden" asp-for="Ingredients[i].Id" />
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input id="lon" type="text" class="form-control" asp-for="Ingredients[i].Name" />
                </div>
                <span asp-validation-for="Ingredients[i].Name"></span>
            </div>


        }

        <div class="col-sm-8">
            <div class="form-group row">
                <input type="submit" id="save" value="Save" class="btn btn-primary" style="margin-top:10px; margin:auto" />
            </div>
        </div>
    </form>
</body>