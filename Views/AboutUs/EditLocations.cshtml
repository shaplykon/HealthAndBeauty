@model HealthAndBeauty.Models.Address

@{
    ViewBag.Title = "Edit locations";
}
<head>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCJMF3gVJD6f6ue_2lLeBODZIfgOI2B3os"></script>

    <script src="~/js/maps-scripts/map-edit.js"></script>
</head>
<body>
    <div class="about-us-container">
        <div class="about-us-block">
            <h2>Available locations:</h2>
            <ul>
                @{foreach (Address address in ViewBag.Addresses)
                    {
                        <li><p>@address.AddressName <a class="delete-link" asp-controller="AboutUs" asp-action="DeleteAddress" asp-route-Id="@address.Id">Delete</a> </p></li>
                    }
                }
            </ul>
        </div>

        <div class="about-us-block" >
            <h2>New location coordinates:</h2>

            <form method="post"
                  asp-controller="AboutUs" asp-action="AddressAdd"
                  enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="Latitude"></label>
                    <div class="col-sm-6">
                        <input id="lat" type="text" class="form-control" asp-for="Latitude" />
                    </div>
                    <span asp-validation-for="Latitude"></span>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="Longtitude"></label>
                    <div class="col-sm-6">
                        <input id="lon" type="text" class="form-control" asp-for="Longtitude" />
                    </div>
                    <span asp-validation-for="Longtitude"></span>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="AddressName"></label>
                    <div class="col-sm-6">
                        <input id="addr" type="text" class="form-control" asp-for="AddressName" />
                    </div>
                    <span asp-validation-for="AddressName"></span>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="Description"></label>
                    <div class="col-sm-6">
                        <textarea class="form-control" asp-for="Description" style="min-height:100px"></textarea>
                    </div>
                    <span asp-validation-for="Description"></span>
                </div>


                <div class="col-sm-8">
                    <div class="form-group row">
                        <input type="submit" id="save" value="Save" class="btn btn-primary" style="margin-top:10px; margin:auto" />
                    </div>
                </div>
            </form>
        </div>

        <div id="MapDiv" class="map-container"> </div>
    </div>


</body>